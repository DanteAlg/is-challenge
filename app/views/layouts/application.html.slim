<!DOCTYPE html>
html
  head
    title IsChallenge
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  body
    header
      h1.header__title
        = link_to root_path, class: 'header__title-link' do
          = fa_icon 'graduation-cap', class: 'header__title-icon'
          = t('application.title')
      .header__links
        = link_to root_path do
          = fa_icon 'home'
          = t('application.header.home')
        = link_to new_student_path
          = fa_icon 'child'
          = t('application.header.create_student')
        = link_to new_course_path
          = fa_icon 'file'
          = t('application.header.create_course')

    .container
      = yield
